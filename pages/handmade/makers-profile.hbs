
<div class="maker-profile">
  {{#if can_edit}}<a class="edit-link" href="/makers/edit-profile/{{data._id}}"><i class="fi-pencil"></i> Edit Profile</a>{{/if}}



  <div class="profile-photo">
    {{#if data.photo.medium}}
    <a class="fancybox" href="{{data.photo.large}}" title=""><img src="{{data.photo.medium}}" /></a>
    {{/if}}
  </div>


  <div class="profile-data">
    <h2>{{data.public_name}}</h2>
    <h3>{{#if data.category}}{{data.category}} / {{/if}}{{data.city}}</h3>

    {{#if data.website_url}}<h4 class="website-link"><a href="{{is_url data.website_url}}" target="_blank">{{data.website_url}}</a></h4>{{/if}}
    <div class="social-links">
    {{#if data.social_etsy}}<span class="social-etsy">etsy &nbsp;<a href="http://etsy.com/shop/{{etsy_handle data.social_etsy}}" target="_blank">/{{etsy_handle data.social_etsy}}</a></span>{{/if}}
    {{#if data.social_facebook}}<span class="social-facebook">facebook &nbsp;<a href="http://facebook.com/{{facebook_handle data.social_facebook}}" target="_blank">/{{facebook_handle data.social_facebook}}</a></span>{{/if}}
    {{#if data.social_twitter}}<span class="social-twitter">twitter &nbsp;<a href="http://twitter.com/{{remove_at data.social_twitter}}" target="_blank">@{{remove_at data.social_twitter}}</a></span>{{/if}}
    {{#if data.social_instagram}}<span class="social-instagram">instagram &nbsp;<a href="http://instagram.com/{{remove_at data.social_instagram}}" target="_blank">@{{remove_at data.social_instagram}}</a></span>{{/if}}
    </div>


  </div>




  <div class="profile-bio">
    {{{nl2br data.bio}}}
  </div>


  <div class="clear"></div>

</div>
